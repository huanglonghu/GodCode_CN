<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.example.godcode.ui.fragment.mainActivity.MainFragment"/>
    </data>

    <LinearLayout
        android:id="@+id/main_popup"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:background="@drawable/bg_popupwindow"
        android:divider="@drawable/divider_3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:showDividers="middle">

        <com.example.godcode.ui.view.ImageTextView
            android:id="@+id/mainPopup_addFriend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|left"
            android:text="添加朋友"
            android:textColor="#fff"
            android:textSize="15sp"
            app:direcation="0"
            app:drawable="@drawable/addfriend"
            app:drawableHeight="8dp"
            app:drawableWidth="8dp"
            android:onClick="@{(view)->fragment.config(view)}"
            />

        <com.example.godcode.ui.view.ImageTextView
            android:id="@+id/mainPopup_sys"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|left"
            android:text="扫一扫"
            android:textColor="#fff"
            android:textSize="15sp"
            app:direcation="0"
            app:drawable="@drawable/sys2"
            app:drawableHeight="8dp"
            app:drawableWidth="8dp"
            android:onClick="@{(view)->fragment.config(view)}"
            />

        <com.example.godcode.ui.view.ImageTextView
            android:id="@+id/mainPopup_gathering"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|left"
            android:text="收款"
            android:textColor="#fff"
            android:textSize="15sp"
            app:direcation="0"
            app:drawable="@drawable/sk2"
            app:drawableHeight="8dp"
            app:drawableWidth="8dp"
            android:onClick="@{(view)->fragment.config(view)}"
            />

    </LinearLayout>
</layout>